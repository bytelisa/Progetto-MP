<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Yahtzee"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Yahtzee">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SettingsActivity">

        </activity>

        <activity
            android:name=".SingleplayerActivity"
            android:exported="true"
            android:theme="@style/Theme.Yahtzee">
        </activity>

        <activity
            android:name=".MultiplayerActivity"
            android:exported="true"
            android:theme="@style/Theme.Yahtzee">
        </activity>

        <activity
            android:name=".NewMultiPlayerActivity"
            android:exported="true"
            android:theme="@style/Theme.Yahtzee">
        </activity>

        <activity
            android:name=".HowToPlayActivity"
            android:exported="true"
            android:theme="@style/Theme.Yahtzee">
        </activity>

        <activity
            android:name=".PlayModeActivity"
            android:exported="true"
            android:theme="@style/Theme.Yahtzee">
        </activity>

        <activity android:name=".DiceRollActivity" />



    </application>

</manifest>